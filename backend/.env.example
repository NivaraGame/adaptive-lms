# Database
DATABASE_URL=postgresql://user:password@localhost:5432/adaptive_lms
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/adaptive_lms_test

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Service
LLM_PROVIDER=ollama  # ollama, openai, deepseek
OLLAMA_BASE_URL=http://localhost:11434
OPENAI_API_KEY=your-openai-api-key
LLM_MODEL=llama2  # or gpt-4, deepseek-chat

# Application
APP_NAME=Adaptive LMS
APP_VERSION=0.1.0
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Adaptation Engine
ADAPTATION_MODE=bandit  # rules, bandit, policy
BANDIT_ALPHA=1.5
BANDIT_MODEL_PATH=models/linucb_bandit.npz

# Metrics
ASYNC_METRICS_SAMPLE_RATE=0.2  # 20% of interactions get LLM evaluation
